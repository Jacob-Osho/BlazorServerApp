@typeparam TIteam
@if (ListOfIteams == null)
{
    if (NullList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://c.tenor.com/YAs3DgW0dbMAAAAC/loading-loader.gif" height="200" />
    }
}
else if (ListOfIteams.Count == 0)
{
    if (EmptyList != null)
    {
        @EmptyList
    }
    else
    {

        <img src="https://cdn1.iconfinder.com/data/icons/leto-files/64/leto_files-58-512.png" height="200" />
    }
}
else
{
    @foreach (var item in ListOfIteams)
    {
       @IteamTemplate(item)
    }
}

@code {
    [Parameter] public RenderFragment NullList { get; set; }
    [Parameter] public RenderFragment EmptyList { get; set; }
    [Parameter] public RenderFragment<TIteam> IteamTemplate { get; set; }
    [Parameter] public List<TIteam> ListOfIteams { get; set; }
}
